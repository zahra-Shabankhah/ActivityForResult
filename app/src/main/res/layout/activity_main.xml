<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Starte erste Activity" />

    <TextView
        android:id="@+id/tvShowFirstResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show first result" />

    <Button
        android:id="@+id/btnStartSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Starte zweite Activity" />

    <TextView
        android:id="@+id/tvShowSecondResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show first result" />

</LinearLayout>